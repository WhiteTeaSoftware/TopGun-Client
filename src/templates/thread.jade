ion-view(view-title='Thread')
    ion-nav-buttons(side='left')
        button.button.button-icon.icon.ion-chevron-left(ui-sref='app.home' nav-direction='back')

    ion-content.has-header(scrollbar-y='false')
        .list.card
            .item
                h2(ng-bind-html='data.thread_author')
            .item.item-body
                p(ng-bind-html='data.thread_message')
                
        ol.responses(ng-repeat='response in responses')
            li
                .response-info {{ response.n }}
                p {{ response.v }}
                    
    .bar.bar-footer.bar-dark
        label.item-input.message-send-footer
            input.message-send-input(ng-model='data.new_message' type='text' placeholder="Type response...")
        a.button.button-icon.icon.ion-ios7-paperplane(ng-click="postMessage()")
