doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='initial-scale=1, user-scalable=no, width=device-width')
        title
        
        link(href='app.css' rel='stylesheet')
        script(src='app.js')    
        script(src='cordova.js')
        
    body(ng-app='TGClient')
        each val in [0, 1, 2, 3, 4]
            .fav-wrapper.ng-hide(class="fav-wrapper-#{val}" ng-show="favorites[#{val}]" ui-sref="app.thread({id: favorites[#{val}]})")
                .fav-tab(class="fav-tab-#{val}")
                    
        ion-nav-view
