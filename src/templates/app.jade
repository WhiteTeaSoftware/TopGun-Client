doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='initial-scale=1, user-scalable=no, width=device-width')
        title
        
        link(href='app.css' rel='stylesheet')
        script(src='cordova.js')
        script(src='app.js')
        
    body(ng-app='TGClient')
        each val in [1, 2, 3, 4, 5]
            .fav-wrapper(class="fav-wrapper-#{val}" ng-model="favorites()[#{val - 1}]" on-tap='gotoFav(val)')
                .fav-tab(class="fav-tab-#{val}")
                    
        ion-nav-view
