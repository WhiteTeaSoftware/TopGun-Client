favColors = {
    '0': #ff8c00,
    '1': #ff0000,
    '2': #6600ff,
    '3': #00cc66,
    '4': #996633
}

.fav-tab
    padding 10px
    border-radius 2px
    height 50px
    width 30px
    padding-bottom 17px
    color white

.fav-message
    border-left-style solid
    border-left-width 10px

.fav-wrapper
    z-index 40
    position absolute
    right -0px

for tabNo, tabColor in favColors
    .fav-tab-{tabNo}
        background tabColor

    .fav-message-{tabNo}
        border-left-color tabColor

    .fav-wrapper-{tabNo}
        top (50 + (60 * tabNo))px

.fav-message-undefined
    border-left-color white
